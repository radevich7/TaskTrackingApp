@model List<TaskTrackingApp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="my-4">Categories</h2>

<div class="col-3">

    <form class="input-group">

        <label for="search" class="me-3 fs-3">Search:</label>
        <input type="search" name="search" class="form-control" id="search" value="@ViewBag.search" />
        <button type="submit" class="btn btn-info text-white "> Submit</button>

    </form>
</div>
<div class="col-3">
    <a href="/categories/create">Create a new category</a>
</div>

<table class="table table-light">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
            </tr>
        }
    </tbody>
</table>
